<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <EditText
        android:layout_margin="10dp"
        android:id="@+id/name"
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight= "1"/>
    <EditText
        android:layout_margin="10dp"
        android:layout_below="@+id/name"
        android:id="@+id/phone"
        android:hint="Enter your mobile no."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_weight= "1"/>
    <EditText
        android:layout_below="@+id/phone"
        android:layout_margin="10dp"
        android:id="@+id/email"
        android:hint="Enter your email id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_weight= "1"/>
    <EditText
        android:layout_below="@+id/email"
        android:layout_margin="10dp"
        android:id="@+id/joining_date"
        android:hint="Enter date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_weight= "1"/>
    <EditText
        android:layout_below="@+id/joining_date"
        android:layout_margin="10dp"
        android:id="@+id/leader_name"
        android:hint="Enter leader name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_weight= "1"/>
    <Button
        android:layout_below="@+id/leader_name"
        android:id="@+id/blueprint"
        android:hint="Set your blueprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:clickable="true"
        android:onClick="onBluePrint"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/leader_name"
        android:layout_alignEnd="@+id/leader_name"
        android:layout_alignLeft="@+id/leader_name"
        android:layout_alignStart="@+id/leader_name" />
    <Button
        android:layout_below="@+id/blueprint"
        android:id="@+id/goals"
        android:hint="Set your Goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:clickable="true"
        android:onClick="onGoal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/blueprint"
        android:layout_alignStart="@+id/blueprint"
        android:layout_alignRight="@+id/blueprint"
        android:layout_alignEnd="@+id/blueprint" />

    <Button
        android:id="@+id/submit"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/goals"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight= "1"
        android:clickable="true"
        android:onClick="onSubmit"
        />

</RelativeLayout>
</ScrollView>